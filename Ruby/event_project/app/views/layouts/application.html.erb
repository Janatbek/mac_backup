<!DOCTYPE html>
<html>
<head>
  <title>Events</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <style>
   #edit{float: right;}
 </style>
</head>
<body>
  <% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
  <p><%= e %></p>
  <% end %>
  <% end %>

  <% if current_user %>
  <form action='/sessions' method='post' style="float:right;">
    <input type='hidden' name='authenticitoken' value='<%= form_authenticity_token %>'>
    <input type='hidden' name='_method' value='delete'>
    <input type='submit' value='Log Out'>
  </form>
  <% end %>
  <%= yield %>

</body>
</html>
