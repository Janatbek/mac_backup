<h2>Edit Your Profile</h2>
<% if flash[:errors]
	flash[:errors].each{ |error| %>
		<p><%=error%></p>
	<% } 
end %>
<form action='/users/update' method='post'>
	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
	<p>First Name: <input type='text' name='user[first_name]' value='<%=@user.first_name%>'></p>
	<p>Last Name: <input type='text' name='user[last_name]' value='<%=@user.last_name%>'></p>
	<p>Email: <input type='text' name='user[email]' value='<%=@user.email%>'></p>
	<p>Location: <input type='text' name='user[city]' value='<%=@user.city%>'>
	<select name='user[state]'>
		<option value='CA'
		<% if @user.state == 'CA' %>
			selected='selected'
		<% end %>
		>CA</option>
		<option value='IL'
		<% if @user.state == 'IL' %>
			selected='selected'
		<% end %>
		>IL</option>
		<option value='NY'
		<% if @user.state == 'NY' %>
			selected='selected'
		<% end %>
		>NY</option>
	</select>
	</p>
	<button>Update Profile</button>
</form>